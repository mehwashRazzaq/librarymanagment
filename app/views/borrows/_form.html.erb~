<%= form_for(@borrow) do |f| %>
  <% if @borrow.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@borrow.errors.count, "error") %> prohibited this borrow from being saved:</h2>

      <ul>
      <% @borrow.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :idate %><br>
    <%= f.date_select :idate %>
  </div>
  <div class="field">
    <%= f.label :rdate %><br>
    <%= f.date_select :rdate %>
  </div>
  <div class="field">
    <%= f.label :book_id %><br>
<%=f.select(:book_id,  Book.all.collect {|p| [p.tilte + "  (" + p.author + ")", p.id]},{include_blank: 'None'}) %>
  </div>
  <div class="field">
    <%= f.label :member_id %><br>
    <%=f.select(:member_id,  Member.all.collect {|p| [p.name + "  (" + p.author + ")", p.id]},{include_blank: 'None'}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
